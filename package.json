{
  "name": "hash-route",
  "version": "2.0.3",
  "description": "A router based on hash string.",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "standard",
    "test": "karma start karma.conf.js",
    "codecov": "codecov",
    "lib": "babel src/ -d lib/",
    "dist": "browserify -t babelify src/index.js > dist/hash-route.js",
    "dist-min": "uglifyjs dist/hash-route.js --mangle --compress > dist/hash-route.min.js",
    "prepublish": "npm run dist && npm run dist-min && npm run lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/hash-route.git"
  },
  "keywords": [
    "hash",
    "hashchange",
    "onhashchange",
    "routing",
    "route",
    "router"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/hash-route/issues"
  },
  "homepage": "https://github.com/kt3k/hash-route#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babel-plugin-istanbul": "^5.1.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "chai": "^4.0.1",
    "codecov": "^3.1.0",
    "karma": "^4.1.0",
    "karma-browserify": "^6.0.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^1.1.0",
    "karma-mocha": "^1.1.1",
    "mocha": "^6.0.0",
    "standard": "^13.0.1",
    "uglify-js": "^3.0.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "path-to-regexp": "^3.0.0"
  },
  "standard": {
    "env": [
      "browser",
      "mocha"
    ],
    "ignore": [
      "dist"
    ]
  }
}
